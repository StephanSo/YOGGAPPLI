<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ssonn.yoggappli.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="9dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp"
            android:layout_marginTop="65dp"
            android:text="Posture" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView"
            android:layout_marginTop="19dp"
            android:text="Nombre de respirations" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView2"
            android:layout_alignRight="@+id/textView2"
            android:layout_below="@+id/txtNbResp"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="53dp"
            android:text="Choix de l'enregistrement" />

        <EditText
            android:id="@+id/txtPosture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp"
            android:layout_toRightOf="@+id/textView"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtNbResp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtPosture"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/btnPrefs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnFile"
            android:layout_alignStart="@+id/btnFile"
            android:layout_centerVertical="true"
            android:text="Preferences" />

        <Button
            android:id="@+id/btnFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/btnVoirPrefs"
            android:text="fichier" />

        <Button
            android:id="@+id/btnSQLite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnFile"
            android:layout_alignStart="@+id/btnFile"
            android:layout_below="@+id/btnFile"
            android:text="SQLITE" />

        <Button
            android:id="@+id/btnVoirPrefs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnPrefs"
            android:layout_alignBottom="@+id/btnPrefs"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:text="Voir Prefs" />

        <Button
            android:id="@+id/btnVoirFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnVoirPrefs"
            android:layout_alignStart="@+id/btnVoirPrefs"
            android:layout_below="@+id/btnVoirPrefs"
            android:text="Voir Fic"
            android:layout_alignRight="@+id/btnVoirPrefs"
            android:layout_alignEnd="@+id/btnVoirPrefs" />

        <Button
            android:id="@+id/btnVoirSQLite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voir SQLITE"
            android:layout_below="@+id/btnVoirFile"
            android:layout_alignRight="@+id/btnVoirFile"
            android:layout_alignEnd="@+id/btnVoirFile" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
